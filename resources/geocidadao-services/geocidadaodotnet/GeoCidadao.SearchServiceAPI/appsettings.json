{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "UseSerilog": true,
  "BasePath": "search-service",
  "ConnectionStrings": {
    "GeoDb": "Host=localhost;Database=geodb;Username=geo;Password=geo",
    "GeoLogsDb": "mongodb://localhost:27018/geocidadaoSearchServiceLogs"
  },
  "AllowedHosts": "*",
  "OAuth": {
    "Authority": "http://localhost:8082/realms/geocidadao",
    "Audience": "",
    "ClaimRoles": {
    },
    "GroupClaims": {
      "Group.Users": "/users",
      "Group.Managers": "/managers",
      "Group.Moderators": "/moderators"
    }
  },
  "ResponseCaching": {
    "MaxAge": 60
  },
  "InMemoryCaching": {
    "MaxAge": 3600
  },
  "MaxConcurrency": 0,
  "RabbitMQ": {
    "HostName": "localhost",
    "Username": "admin",
    "Password": "admin"
  },
  "Elasticsearch": {
    "Url": "http://localhost:9200",
    "DefaultIndex": "geocidadao"
  },
  "ExternalServices": {
    "PostsApiUrl": "http://localhost:8091/gerenciamento-posts",
    "UsersApiUrl": "http://localhost:8090/gerenciamento-usuarios",
    "TimeoutSeconds": 30
  },
  "ReindexIntervalHours": 24
}
