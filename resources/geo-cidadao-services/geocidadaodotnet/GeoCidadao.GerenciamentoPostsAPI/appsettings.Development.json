{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "UseSerilog": true,
  "BasePath": "gerenciamento-posts",
  "ConnectionStrings": {
    "GeoDb": "Host=localhost;Database=geodb;Username=geo;Password=geo",
    "GeoLogsDb": "mongodb://localhost:27018/geocidadaoGerenciamentoPostsLogs"
  },
  "AllowedHosts": "*",
  "OAuth": {
    "Authority": "http://localhost:8082/realms/geocidadao",
    "Audience": "geocidadao-posts-api",
    "ClaimRoles": {
      "Realm.USER": "realm:USER",
      "Posts.Create": "res:geocidadao-posts-api:post:create",
      "Posts.Delete.Self": "res:geocidadao-posts-api:post:delete:self",
      "Posts.Delete.Any": "res:geocidadao-posts-api:post:delete:any",
      "Posts.Edit.Self": "res:geocidadao-posts-api:post:edit:self",
      "Posts.Edit.Any": "res:geocidadao-posts-api:post:edit:any",
      "Comments.Edit": "res:geocidadao-interation-api:comment:edit:self",
      "Comments.Delete.Self": "res:geocidadao-interation-api:comment:delete:self",
      "Comments.Delete.Any": "res:geocidadao-interation-api:comment:delete:any"
    },
    "GroupClaims": {
      "Group.Users": "/users",
      "Group.Managers": "/managers",
      "Group.Moderators": "/moderators"
    }
  },
  "ResponseCaching": {
    "MaxAge": 60
  },
  "InMemoryCaching": {
    "MaxAge": 3600
  },
  "MaxConcurrency": 0,
  "RabbitMQ": {
    "HostName": "localhost",
    "Username": "admin",
    "Password": "admin"
  },
  "AWSCredentials": {
    "BucketName": "media-posts",
    "AccessKey": "test",
    "SecretKey": "test",
    "Region": "us-east-1",
    "ServiceURL": "http://localhost:4566"
  }
}
